<div id="channel_star_<%= channel.id %>">
  <%= button_to toggle_hidden_workspace_slack_channel_path(workspace, channel),
        method: :patch,
        class: "inline-flex items-center justify-center w-8 h-8 rounded-md hover:bg-accent transition-colors",
        title: channel.hidden? ? "Show channel" : "Hide channel",
        data: { turbo: true } do %>
    <% if channel.hidden? %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
    <% end %>
  <% end %>
</div>
