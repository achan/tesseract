<div id="channel_actionable_<%= channel.id %>">
  <%= button_to toggle_actionable_workspace_slack_channel_path(workspace, channel),
        method: :patch,
        class: "inline-flex items-center justify-center w-8 h-8 rounded-md hover:bg-accent transition-colors",
        title: channel.actionable? ? "Disable auto-summaries" : "Enable auto-summaries",
        data: { turbo: true } do %>
    <% if channel.actionable? %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-yellow-500"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
    <% else %>
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-muted-foreground"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/></svg>
    <% end %>
  <% end %>
</div>
