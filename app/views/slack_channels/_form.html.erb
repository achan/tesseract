<%= form_with(model: channel, url: workspace_slack_channel_path(workspace, channel)) do |f| %>
  <% if channel.errors.any? %>
    <div class="bg-red-50 dark:bg-red-900/30 border border-destructive rounded-md px-4 py-3 mb-4 text-destructive text-sm">
      <ul class="list-disc pl-5">
        <% channel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :channel_name, "Channel name", class: "block text-sm font-semibold mb-1" %>
    <%= f.text_field :channel_name,
          class: "w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :priority, "Priority", class: "block text-sm font-semibold mb-1" %>
    <%= f.number_field :priority,
          class: "w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent" %>
  </div>

  <div class="mb-4">
    <%= f.label :interaction_description, "Interaction description", class: "block text-sm font-semibold mb-1" %>
    <%= f.text_area :interaction_description,
          rows: 3,
          placeholder: "How you typically interact with this channel...",
          class: "w-full px-3 py-2 border border-border rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-ring focus:border-transparent" %>
  </div>

  <div class="flex gap-3 mt-6">
    <%= f.submit class: "inline-flex items-center px-4 py-2 text-sm font-medium text-primary-foreground bg-primary rounded-md hover:bg-primary/90 cursor-pointer" %>
    <%= link_to "Cancel", workspace_slack_channel_path(workspace, channel),
          class: "inline-flex items-center px-4 py-2 text-sm font-medium border border-border rounded-md hover:bg-accent" %>
  </div>
<% end %>
