<%
  priority_classes = case action_item.priority
  when 1 then "border-l-4 border-l-red-500"
  when 2 then "border-l-4 border-l-orange-500"
  when 3 then "border-l-4 border-l-yellow-500"
  else "border-l-4 border-l-gray-400"
  end

  priority_label_classes = case action_item.priority
  when 1 then "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200"
  when 2 then "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200"
  when 3 then "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200"
  else "bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400"
  end
%>
<div id="action_item_<%= action_item.id %>" class="flex flex-col w-[320px] shrink-0 p-3 border border-border rounded-md <%= priority_classes %> <%= action_item.status == 'done' ? 'opacity-50' : '' %> <%= action_item.status == 'dismissed' ? 'opacity-40' : '' %>">
  <div class="flex items-start justify-between gap-2 mb-1">
    <span class="inline-flex items-center px-1.5 py-0.5 text-xs font-medium rounded shrink-0 <%= priority_label_classes %>">P<%= action_item.priority %></span>
    <% if action_item.status != "open" %>
      <span class="text-xs text-muted capitalize"><%= action_item.status %></span>
    <% end %>
  </div>
  <p class="text-sm mb-1 line-clamp-3"><%= action_item.description %></p>
  <div class="mt-auto">
    <% if action_item.assignee_user_id.present? %>
      <span class="text-xs text-muted">Assigned: <%= action_item.assignee_user_id %></span>
    <% end %>
    <% if action_item.status == "open" %>
      <div class="flex gap-2 mt-2">
        <%= button_to "Done", action_item_path(action_item), method: :patch,
              params: { action_item: { status: "done" } },
              class: "inline-flex items-center px-2 py-1 text-xs font-medium text-success-foreground bg-success rounded-md hover:bg-success/90 cursor-pointer",
              data: { turbo: true } %>
        <%= button_to "Dismiss", action_item_path(action_item), method: :patch,
              params: { action_item: { status: "dismissed" } },
              class: "inline-flex items-center px-2 py-1 text-xs font-medium bg-secondary text-secondary-foreground rounded-md hover:bg-accent cursor-pointer",
              data: { turbo: true } %>
      </div>
    <% end %>
  </div>
</div>
