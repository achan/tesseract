<%
  priority_classes = case action_item.priority
  when 1 then "border-l-4 border-l-red-500"
  when 2 then "border-l-4 border-l-orange-500"
  when 3 then "border-l-4 border-l-yellow-500"
  else "border-l-4 border-l-gray-400"
  end

  priority_label_classes = case action_item.priority
  when 1 then "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200"
  when 2 then "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-200"
  when 3 then "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-200"
  else "bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400"
  end

  button_classes = case action_item.status
  when "todo" then "bg-indigo-600 text-white hover:bg-indigo-700"
  else "bg-primary text-primary-foreground hover:bg-primary/90"
  end
%>
<div id="dashboard_action_item_<%= action_item.id %>" class="flex flex-col w-[320px] shrink-0 p-3 border border-border rounded-md <%= priority_classes %>">
  <div class="flex items-start justify-between gap-2 mb-1">
    <span class="inline-flex items-center px-1.5 py-0.5 text-xs font-medium rounded shrink-0 <%= priority_label_classes %>">P<%= action_item.priority %></span>
    <% if action_item.source.is_a?(SlackChannel) %>
      <span class="text-xs text-muted truncate">#<%= action_item.source.display_name %></span>
    <% end %>
  </div>
  <p class="text-sm mb-1 line-clamp-3"><%= action_item.description %></p>
  <div class="mt-auto">
    <div class="flex items-center gap-2 text-xs text-muted mb-2">
      <% if action_item.assignee_user_id.present? %>
        <span>Assigned: <%= action_item.assignee_user_id %></span>
      <% end %>
      <span><%= action_item.created_at.strftime("%b %-d") %></span>
    </div>
    <div class="flex gap-2">
      <div data-controller="triage-dropdown" class="relative">
        <button type="button" data-action="click->triage-dropdown#toggle" class="inline-flex items-center px-3 py-1.5 text-sm font-medium rounded-md cursor-pointer <%= button_classes %>">
          <%= action_item.status_label %>
          <svg class="ml-1 w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
        </button>
        <div data-triage-dropdown-target="menu" class="hidden w-36 bg-card border border-border rounded-md shadow-lg z-50">
          <% %w[todo in_progress done backlog wont_fix].each do |status| %>
            <%= button_to action_item_path(action_item), method: :patch,
                  params: { action_item: { status: status } },
                  class: "block w-full text-left px-3 py-2 text-sm hover:bg-accent cursor-pointer first:rounded-t-md last:rounded-b-md",
                  data: { turbo: true } do %>
              <%= ActionItem::STATUS_LABELS[status] || status.titleize %>
            <% end %>
          <% end %>
        </div>
      </div>
      <%= button_to "Archive", archive_action_item_path(action_item), method: :patch,
            class: "inline-flex items-center px-3 py-1.5 text-sm font-medium bg-secondary text-secondary-foreground rounded-md hover:bg-accent cursor-pointer",
            data: { turbo: true } %>
    </div>
  </div>
</div>
