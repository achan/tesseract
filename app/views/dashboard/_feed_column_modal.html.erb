<div id="feed_column_modal" hidden
     data-deck-target="modal"
     data-action="click->deck#closeModal"
     class="fixed inset-0 z-50 flex items-center justify-center bg-black/80">
  <div class="bg-card border border-border rounded-lg shadow-xl w-full max-w-lg mx-4 p-6 max-h-[80vh] flex flex-col"
       data-action="click->deck#stopPropagation">
    <div class="flex items-center justify-between mb-4 shrink-0">
      <h2 class="text-lg font-semibold text-foreground" data-deck-target="modalTitle">Add Column</h2>
      <button type="button" data-action="deck#closeModal"
              class="text-muted hover:text-foreground text-xl leading-none">&times;</button>
    </div>

    <form data-deck-target="form" data-action="submit->deck#submitForm" class="flex flex-col flex-1 min-h-0">
      <input type="hidden" name="feed_id" data-deck-target="feedId" value="">

      <div class="mb-4 shrink-0">
        <label class="block text-sm font-medium mb-1">Name</label>
        <input type="text" name="name" data-deck-target="nameInput" required
               class="w-full bg-secondary border border-border rounded-md px-3 py-2 text-sm text-foreground placeholder:text-muted focus:outline-none focus:ring-1 focus:ring-primary"
               placeholder="e.g. Engineering, Alerts">
      </div>

      <div class="mb-4 flex-1 overflow-y-auto min-h-0">
        <label class="block text-sm font-medium mb-2">Channels</label>
        <div class="space-y-3">
          <% available_channels.group_by { |c| c.workspace }.each do |workspace, channels| %>
            <div>
              <p class="text-xs font-medium text-muted mb-1"><%= workspace.team_name %></p>
              <div class="space-y-1">
                <% channels.each do |channel| %>
                  <label class="flex items-center gap-2 text-sm cursor-pointer">
                    <input type="checkbox" name="source_ids[]" value="<%= channel.id %>"
                           data-deck-target="sourceCheckbox" data-source-id="<%= channel.id %>"
                           class="accent-primary">
                    #<%= channel.display_name %>
                  </label>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <div class="flex justify-end gap-2 pt-4 border-t border-border shrink-0">
        <button type="button" data-action="deck#closeModal"
                class="px-3 py-1.5 text-sm text-muted hover:text-foreground rounded-md border border-border">
          Cancel
        </button>
        <button type="submit"
                class="px-3 py-1.5 text-sm bg-primary text-primary-foreground rounded-md hover:opacity-90 cursor-pointer">
          Save
        </button>
      </div>
    </form>
  </div>
</div>
