<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Tesseract" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-background text-foreground antialiased">
    <nav class="bg-transparent px-6 py-3 flex items-center justify-between">
      <%= link_to root_path, class: "no-underline" do %>
        <%= image_tag "logo.png", alt: "Tesseract", class: "h-8" %>
      <% end %>
      <%= link_to "Settings", settings_path, class: "text-sm text-muted no-underline hover:text-foreground" %>
    </nav>

    <main class="p-8 overflow-y-auto">
      <% if notice.present? %>
        <div class="bg-green-50 border border-success rounded-md px-4 py-3 mb-6 text-green-800 text-sm"><%= notice %></div>
      <% end %>
      <%= yield %>
    </main>
  </body>
</html>
