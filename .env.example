# Comma-delimited, positionally matched across all three variables
SLACK_WORKSPACES=Workspace One,Workspace Two
SLACK_USER_OAUTH_TOKENS=xoxp-token-one,xoxp-token-two
SLACK_SIGNING_SECRETS=secret_one,secret_two

# Channels per workspace — key derived from workspace name (uppercased, spaces → underscores)
SLACK_CHANNELS_WORKSPACE_ONE=C0123456789,C9876543210
SLACK_CHANNELS_WORKSPACE_TWO=C1111111111

# HTTP Basic Auth (optional — omit both to disable)
HTTP_BASIC_AUTH_USERNAME=
HTTP_BASIC_AUTH_PASSWORD=

# Generate these with: bin/rails db:encryption:init
ACTIVE_RECORD_ENCRYPTION_PRIMARY_KEY=
ACTIVE_RECORD_ENCRYPTION_DETERMINISTIC_KEY=
ACTIVE_RECORD_ENCRYPTION_KEY_DERIVATION_SALT=
